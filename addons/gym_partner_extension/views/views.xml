<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_gym" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.gym</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Gimnasio" name="gym_tab">
                    <group>
                        <group string="Estado">
                            <field name="is_socio" widget="boolean_toggle" readonly="1"/>
                        </group>
                        <group string="Fechas">
                            <field name="fecha_vencimiento" readonly="1" invisible="not is_socio"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>